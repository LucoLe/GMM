<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Club name</th>
        <th>Club Owner</th>
      </tr>
    </thead>
    <tbody>
      <% @clubs.each do |club| %>
        <tr>
          <td><%= link_to club.name, club_path(club) %></td>
          <td><%= club.club_owner.email %></td>
        </tr>
      <% end %>
  </table>

</div>